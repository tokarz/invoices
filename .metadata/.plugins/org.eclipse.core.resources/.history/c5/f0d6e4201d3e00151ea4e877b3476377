'use strict';
app.directive('mmtTable', function($timeout) {
	return {
		restrict : 'AC',
		link : function(scope, element, attribute) {
			$timeout(function() {

				scope.table = $(element).DataTable({
					"ajax" : {
						"url" : "rest/tableData",
						"type" : "GET"
					},
					"columns" : [ {
						"data" : "date"
					}, {
						"data" : "fname"
					}, {
						"data" : "lname"
					}, {
						"data" : "salary"
					}, {
						"data" : "start_date"
					}, {
						"data" : "salary"
					} ]
				});
				//scope.table.columns.adjust().draw();

			});

		}

	}

});