package pl.agropin.services;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

import daos.InvoicesDAO;
import database.DatabaseService;
import entities.Invoices;

@Path("/tableData")
public class DataTablesService {

	@GET
	@Produces(MediaType.APPLICATION_JSON)
	public String getTableData(String sessionId, String userName,
			String password) {

		InvoicesDAO invoices = new InvoicesDAO(new DatabaseService());
		Invoices invoicesByName = invoices.getInvoicesByName(userName);

		String jsonBig = "{\"data\": [" + "{" + "\"date\": \""
				+ invoicesByName.getImieprac() + "\"," + "\"fname\": \""
				+ invoicesByName.getImieprac() + "\"," + "\"lname\": \""
				+ invoicesByName.getImieprac() + "\"," + "\"salary\": \""
				+ invoicesByName.getImieprac() + "\"" + "}" + "]}";

		return jsonBig;
	}

}
